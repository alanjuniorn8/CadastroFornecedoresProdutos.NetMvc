@using CadastroFornecedores.Extensions
@model CadastroFornecedores.ViewModels.FornecedorViewModel
@{
    ViewData["Title"] = "Excluir - " + Model.Nome;
 }

<h1 style="padding-top: 50px">@ViewData["Title"]</h1>
<h3>Você tem certeza disso?</h3>
<hr />
<vc:errors-summary-component></vc:errors-summary-component>
<div class="row">
    <div>
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2"> 
                @Html.DisplayNameFor(model => model.Documento)
            </dt>
            <dd class="col-sm-12">
                @this.FormataDocumento(Model.TipoFornecedor, Model.Documento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>
        </dl>
        <div style="padding: 15px">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </form>
        </div>
    </div>
    <div>
        <partial name="_DetailsEndereco">
    </div>
</div>